{
  "version": 2,
  "env": {
    "SQL_USERNAME": "@cso-sql-username",
    "SQL_PASSWORD": "@cso-sql-password",
    "SQL_HOSTNAME": "@cso-sql-hostname",
    "SQL_DATABASE": "@cso-sql-database"
  },
  "build": {
    "env": {
      "SQL_USERNAME": "@cso-sql-username",
      "SQL_PASSWORD": "@cso-sql-password",
      "SQL_HOSTNAME": "@cso-sql-hostname",
      "SQL_DATABASE": "@cso-sql-database"
    }
  },
  "builds": [
    { "src": "src/observations.js", "use": "@now/node" },
    { "src": "package.json", "use": "@now/static-build"}
  ],
  "routes": [
    { "src": "/api", "headers": { "cache-control": "s-maxage=31536000" }, "dest": "/src/observations.js" },
    { "src": "/api/snapshots/geojson", "dest": "/api/snapshots/geojson"},
    { "src": "/api/snapshots/csv", "dest": "/csv"},
    { "src": "/api/docs", "dest":"/api/docs.html"}
  ]
}
