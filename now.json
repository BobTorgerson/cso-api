{
  "version": 2,
  "env": {
    "SQL_USERNAME": "@cso-sql-username",
    "SQL_PASSWORD": "@cso-sql-password",
    "SQL_HOSTNAME": "@cso-sql-hostname"
  },
  "builds": [
    { "src": "src/observations.js", "use": "@now/node" },
    { "src": "src/snapshots/package.json", "use": "@now/static-build"}
  ],
  "routes": [
    { "src": "/obs", "headers": { "cache-control": "s-maxage=31536000" }, "dest": "src/observations.js" },
    { "src": "/snapshots/*", "dest": "src/snapshots/dist/*"}
  ]
}
